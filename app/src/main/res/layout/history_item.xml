<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:layout_height="128dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/history_item_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/history_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/history_item_shop"
        app:layout_constraintLeft_toRightOf="@id/history_item_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Machiato" />

    <TextView
        android:id="@+id/history_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/history_item_total"
        app:layout_constraintLeft_toLeftOf="@id/history_item_name"
        app:layout_constraintTop_toBottomOf="@id/history_item_shop" />

    <TextView
        android:id="@+id/history_item_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/history_item_date"
        app:layout_constraintLeft_toLeftOf="@id/history_item_name"
        app:layout_constraintTop_toBottomOf="@id/history_item_quantity" />

    <TextView
        android:id="@+id/history_item_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/history_item_quantity"
        app:layout_constraintLeft_toLeftOf="@id/history_item_name"
        app:layout_constraintTop_toBottomOf="@id/history_item_name" />

    <TextView
        android:id="@+id/history_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/history_item_name"
        app:layout_constraintTop_toBottomOf="@id/history_item_total" />
</android.support.constraint.ConstraintLayout>